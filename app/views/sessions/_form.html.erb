<div class="info">

    <h1 class="display-5 font-weight-bold">Fit Dish</h1>
    <h6 class="mb-3 font-weight-light">Your Healthy Eating Companion </h6>
    <img id="mainEmoji" class="d-block mx-auto my-2" src= "<%= asset_path('FitDish.png') %>">
    <h3 class="my-3 font-weight-bold">Log In</h3>

      <%= form_tag(login_path) do %>
        <div class="form-group">
          <%= label_tag "Email" %><br>
          <%= text_field_tag "email", nil, placeholder: "Email", class: "form-control-lg" %><br>
        </div>
        <div class="form-group">
        <%= label_tag "Password" %><br>
        <%= password_field_tag "password", nil, placeholder: "Password", class: "form-control-lg" %><br>
        </div>
        <%= submit_tag "Log In", class: "btn btn-primary btn-lg" %>
      <% end %>


</div>
