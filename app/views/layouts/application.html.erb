<!DOCTYPE html>
<html>
  <head>
    <title>Fit Dish</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('FitDish.png'), :rel => 'icon', :type => "image/png" %>

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  </head>
  <body>
      <div class="bg">

      <%= render 'layouts/navbar' if logged_in? %>

        <% flash.each do |key, value| %>
          <div class="center alert alert-<%= key %>"><%= value %></div>
        <% end %>

      <div class="container text-left text-light align-middle">

          <%= yield %>

      </div>

    </div>
  </body>
</html>
